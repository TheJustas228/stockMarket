<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView for stock symbol (Updated text) -->
    <TextView
        android:id="@+id/tvStockSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Stock"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Button layout for time intervals -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnOneHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1h"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnOneDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1d"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnOneWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1wk"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnOneMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1mo"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnThreeMonths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3mo"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Graph view for stock price -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Additional TextViews for displaying stock information -->
    <TextView
        android:id="@+id/tvStockPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Price"
        android:textSize="16sp" />

</LinearLayout>