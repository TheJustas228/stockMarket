<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView for stock symbol (Updated text) -->
    <TextView
        android:id="@+id/tvStockSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Stock"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTrackStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Stock"
        android:layout_marginTop="8dp"/>

    <!-- Button layout for time intervals -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnOneDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1d"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnOneWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1wk"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnOneMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1mo"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnThreeMonths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3mo"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Graph view for stock price -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Additional TextViews for displaying stock information -->
    <TextView
        android:id="@+id/tvStockPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Price"
        android:textSize="16sp" />
    <!-- Additional TextViews for displaying other stock information -->
    <TextView
        android:id="@+id/tvPreviousClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Close"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvMarketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Cap"
        android:textSize="16sp" />
    <!-- Additional TextViews for new stock information -->
    <TextView
        android:id="@+id/tvDividendDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dividend Date"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDividendYield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dividend Yield"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvRegularMarketOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Open"
        android:textSize="16sp" />
</LinearLayout>